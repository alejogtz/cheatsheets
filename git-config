# Open global config in configured editor
git config --global --edit

# Set custom colors on untrcked and modified files
git config --global color.status.untracked {{yellow}}
git config --global color.status.changed {{color_code}}

# Rountine configurations
git config --global user.name "Alejo Gutierrez"
git config --global user.email alejox.gutierrez@gmail.com


git config --global credential.helper store
git config --global alias.co checkout # type `git co` instead of `checkout`
git config --global credential.helper "cache --timeout=86400"
